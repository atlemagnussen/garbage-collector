{
    "include": [
        "src",
        "../common/**/*",
    ],
    "compilerOptions": {
        "incremental": true,
        "target": "ES2020",
        "module": "es2020",
        "lib": [
            "es2020",
            "webworker",
            "dom"
        ],
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "removeComments": true,
        "strict": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/*"],
            "@common/*": ["../common/*"]
        }
    }
}